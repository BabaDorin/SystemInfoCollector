            <Grid Grid.Row="2" Grid.ColumnSpan="2"  Style="{StaticResource MutedGrid}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Margin="10" Name="btViewUpdate"
                        Grid.Column="0" Click="btViewUpdate_Click" 
                        Content="View / Modify data"
                        Style="{StaticResource SecondaryButton}"
                        Background="{StaticResource Dark}"/>

                <Button Margin="10" 
                        Name="btWriteFile" 
                        Grid.Column="1" 
                        Click="btWriteFile_Click" 
                        Content="Export JSON"
                        Style="{StaticResource SecondaryButton}"
                        Background="{StaticResource Dark}"/>

            </Grid>

        </Grid>

    </Grid>
</UserControl>
