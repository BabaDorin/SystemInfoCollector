<Window x:Class="SystemInfoCollectorV2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemInfoCollectorV2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" Background="{StaticResource Dark}">
            <Button Name="btHome" Style="{StaticResource MenuButtonStyle}" Content="Home" DockPanel.Dock="Top" VerticalAlignment="Top"
                    Click="btHome_Click"/>
            <Button Name="btViewUpdate" Style="{StaticResource MenuButtonStyle}" Content="View Update" DockPanel.Dock="Top" VerticalAlignment="Top"
                    Click="btViewUpdate_Click"/>
            <Button Name="btPreferences" Style="{StaticResource MenuButtonStyle}" Content="Preferences" DockPanel.Dock="Top" VerticalAlignment="Top"
                    Click="btPreferences_Click"/>
        </DockPanel>
        
        <ContentControl Grid.Column="1" Name="childWindow">
        </ContentControl>
    </Grid>
</Window>
